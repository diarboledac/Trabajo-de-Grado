# Copia este archivo a ".env" y rellena los valores reales antes de ejecutar cualquier script.

# ThingsBoard REST API
TB_URL=http://thingsboard.local:8080
TB_USERNAME=tenant@thingsboard.org
TB_PASSWORD=tenant

# Opcional: servidor padre a limpiar cuando se borren dispositivos del edge
TB_PARENT_URL=
TB_PARENT_USERNAME=
TB_PARENT_PASSWORD=

# Parámetros de la flota simulada
DEVICE_PREFIX=sim
DEVICE_COUNT=100
DEVICE_LABEL=sim-lab
DEVICE_TYPE=sensor
DEVICE_PROFILE_ID=

# Configuración MQTT
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_TLS=0
MQTT_TOPIC=v1/devices/me/telemetry
MQTT_QOS=1

# Ritmo de la simulación
PUBLISH_INTERVAL_SEC=1
SIM_DURATION_SEC=120
REPORT_INTERVAL_SEC=30
RAMP_PERCENTAGES=25 50 100

# Dashboard Flask embebido
METRICS_HOST=0.0.0.0
METRICS_PORT=5050
METRICS_REFRESH_MS=2000

# Archivos de control opcionales
DISABLED_DEVICES_FILE=data/control/disabled_devices.json
SIM_PID_FILE=data/control/mqtt_stress.pid
